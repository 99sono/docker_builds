# AIDER Configuration Template
# Copy this file to ~/.aider.conf.yml and customize as needed

# API Configuration
openai-api-key: YOUR_OPENAI_API_KEY_HERE
anthropic-api-key: YOUR_ANTHROPIC_API_KEY_HERE

# Model Preferences
model: gpt-4-turbo-preview
weak-model: gpt-3.5-turbo

# Git Integration
auto-commits: true
auto-lint: true

# Editor Settings
editor: vim
edit-format: whole

# Output Settings
pretty: true
stream: true
